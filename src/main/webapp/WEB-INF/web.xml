
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Wedding Vendor Application</display-name>
    
    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>VendorServlet</servlet-name>
        <servlet-class>com.weddingvendor.backend.VendorServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>VendorBookingServlet</servlet-name>
        <servlet-class>com.weddingvendor.backend.VendorBookingServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UserAuthServlet</servlet-name>
        <servlet-class>com.weddingvendor.backend.UserAuthServlet</servlet-class>
    </servlet>
    
    <!-- Import servlet mappings from external file -->
    <!-- Note: This is for organization only. In a real deployment,
         servlet container will use the mappings defined directly in web.xml -->
    
    <!-- Include servlet mappings directly -->
    <servlet-mapping>
        <servlet-name>VendorServlet</servlet-name>
        <url-pattern>/api/vendors/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>VendorBookingServlet</servlet-name>
        <url-pattern>/api/vendor/bookings/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UserAuthServlet</servlet-name>
        <url-pattern>/api/auth/*</url-pattern>
    </servlet-mapping>
    
    <!-- CORS Filter for Cross-Domain Requests -->
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.weddingvendor.backend.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
